<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/notification_root_expanded"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Dòng chứa ảnh và text -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!-- Ảnh bo góc -->
        <ImageView
            android:id="@+id/notification_image"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/ic_close_dialog"
            android:scaleType="centerCrop"
            android:clipToOutline="true"
            android:layout_marginEnd="12dp" />

        <!-- Text bên phải -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/notification_title_bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tải file thành công"
                android:textColor="#1A1A1A"
                android:gravity="center"
                android:textSize="15sp"
                android:textStyle="bold"
                android:maxLines="2"
                android:ellipsize="end" />

            <TextView
                android:id="@+id/notification_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="File vừa tải: "
                android:textColor="#888888"
                android:textSize="13sp"
                android:maxLines="2"
                android:ellipsize="end"
                android:layout_marginTop="2dp" />
        </LinearLayout>
    </LinearLayout>

    <!-- Nút bấm -->
    <TextView
        android:layout_marginTop="6dp"
        android:id="@+id/notification_button"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:textStyle="bold"
        android:textSize="@dimen/_16sdp"
        android:layout_gravity="center_vertical"
        android:background="@drawable/bg_btn_notification"
        android:clickable="true"
        android:focusable="false"
        android:gravity="center"
        android:text="Open Now!"
        android:textAllCaps="false"
        android:textColor="@color/white">

    </TextView>
</LinearLayout>