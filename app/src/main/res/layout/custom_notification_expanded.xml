<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/notification_root_expanded"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
   >

    <!-- Dòng chứa ảnh và text -->

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/notification_title_bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="A Sweet Contract with the Mafia Boss"
                android:textColor="@color/color_14181F"
                android:textSize="15sp"
                android:textStyle="bold"
                android:maxLines="2"
                android:ellipsize="end" />

            <TextView
                android:id="@+id/notification_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Currently watching"
                android:textColor="@color/color_14181F"
                android:textSize="13sp"
                android:maxLines="3"
                android:ellipsize="end"
                android:layout_marginTop="2dp" />
        </LinearLayout>


    <!-- Nút bấm -->
    <TextView

        android:id="@+id/notification_button"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:layout_gravity="center_vertical"
        android:background="@drawable/bg_btn_action_noti"
        android:clickable="true"
        android:focusable="false"
        android:gravity="center"

        android:text="Continue"
        android:textAllCaps="false"
        android:textColor="@color/white">

    </TextView>
</LinearLayout>